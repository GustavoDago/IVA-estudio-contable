*       *                                                         
*       *********************************************************
*
FUNCTION _rqf16533g     &&  m.movimiento VALID
#REGION 1
DO CASE
CASE M.MOVIMIENTO = 1
	GO TOP
	WAIT WINDOW "PRINCIPIO DEL ARCHIVO" NOWAIT
CASE M.MOVIMIENTO = 4
	if .not. eof()
		SKIP
	else
		WAIT WINDOW "FIN DE ARCHIVO" NOWAIT
		GO TOP
	ENDIF
CASE M.MOVIMIENTO = 3
	BROWSE NOMODIFY NOAPPEND
	show gets
CASE M.MOVIMIENTO = 2
	if .not. bof()
		SKIP - 1
	else
		WAIT WINDOW "PRINCIPIO DE ARCHIVO" NOWAIT
		GO BOTTOM
	ENDIF
CASE M.MOVIMIENTO = 5
	GO BOTTOM
	WAIT WINDOW "FIN DEL ARCHIVO " NOWAIT
ENDCASE
SCATTER MEMVAR
SHOW GETS


*       *********************************************************
*       *                                                         
*       * _RQF16535U           m.ACEPTAR VALID                    
*       *                                                         
*       * Function Origin:                                        
*       *                                                         
*       * From Platform:       Windows                            
*       * From Screen:         PROVEDO,     Record Number:   10   
*       * Variable:            m.ACEPTAR                          
*       * Called By:           VALID Clause                       
*       * Object Type:         Push Button                        
*       * Snippet Number:      2                                  
*       *                                                         
*       *********************************************************
*
FUNCTION _rqf16535u     &&  m.ACEPTAR VALID
#REGION 1
IF M.ACEPTAR = 1
	DO CASE
	CASE M.ACCION = 1
		set order to 3	
			if reccount() = 0
				m.cod_prov = 1
			else
				go bottom
				m.cod_prov= cod_prov + 1
			endif
			IF M.NOMBRE > "  "
				set order to 1
				seek m.nombre
				if found()
					wait window NOWAIT " YA EXISTE ESE NOMBRE "
					SEN = .T.
					_CUROBJ = 2
				ENDIF
			ELSE
				WAIT WINDOW NOWAIT "ESCRIBA EL NOMBRE"
				SEN = .T.
				_CUROBJ = 2
			ENDIF
			IF M.CUIT > "         "
				SET ORDER TO 2
				SEEK M.CUIT
				IF FOUND()
					WAIT WINDOW NOWAIT "CUIT REPETIDO"
					SEN = .T.
					_CUROBJ = 3
				ENDIF
			ELSE
				WAIT WINDOW NOWAIT "ESCRIBA EL CUIT"
				SEN = .T.
					_CUROBJ = 3
			ENDIF
			IF SEN = .F.
				INSERT INTO provedor FROM MEMVAR
				SHOW GETS DISABLE
				SHOW GET M.ACCION ENABLE
				SHOW GET M.MOVIMIENTO ENABLE
				SHOW GET M.ACEPTAR DISABLE
				SHOW GET M.ORDEN ENABLE
				SHOW GET M.SALIR ENABLE
			ELSE
				SEN = .F.
			ENDIF
	CASE M.ACCION = 2
		DELETE
		SKIP
		SCATTER MEMVAR
		SHOW GETS
		SHOW GETS DISABLE
		SHOW GET M.ACCION ENABLE
		SHOW GET M.MOVIMIENTO ENABLE
		SHOW GET M.ORDEN ENABLE
		SHOW GET M.ACEPTAR DISABLE
		SHOW GET M.SALIR ENABLE
	CASE M.ACCION = 3
		IF M.CUIT > "  -        - "
			IF M.CUIT <> CUIT
				SET ORDER TO 2
				SEEK M.CUIT
				IF FOUND()
					WAIT WINDOW NOWAIT "CUIT REPETIDO"
					SEN = .T.
					_CUROBJ = 3
				ENDIF
			ENDIF
		ELSE
				WAIT WINDOW NOWAIT "ESCRIBA EL CUIT"
				SEN = .T.
				_CUROBJ = 3
		ENDIF
		SET ORDER TO 3
		SEEK M.CODIGO
		IF M.NOMBRE > "    "	
			IF M.NOMBRE <> NOMBRE
				set order to 1
				seek m.nombre
				if found()
					wait window NOWAIT " YA EXISTE ESE NOMBRE "
					SEN = .T.
					_CUROBJ = 2
				ENDIF
			ENDIF
		ELSE
			WAIT WINDOW NOWAIT "ESCRIBA EL NOMBRE"
			SEN = .T.
			_CUROBJ = 2
		ENDIF
		IF SEN = .F.
			SET ORDER TO 3
			SEEK M.COD_prov
			GATHER MEMVAR
			SHOW GETS DISABLE
			SHOW GET M.ACCION ENABLE
			SHOW GET M.MOVIMIENTO ENABLE
			SHOW GET M.ACEPTAR DISABLE
			SHOW GET M.ORDEN ENABLE
			SHOW GET M.SALIR ENABLE
		ELSE
			SEN = .F.
		ENDIF
ENDCASE
ELSE
	SHOW GETS DISABLE
	SHOW GET M.ACCION ENABLE
	SHOW GET M.MOVIMIENTO ENABLE
	SHOW GET M.ACEPTAR DISABLE
	SHOW GET M.SALIR ENABLE
	SHOW GET M.ORDEN ENABLE
ENDIF
set order to ORDEN
SHOW GETS

